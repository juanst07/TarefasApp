@model IEnumerable<TarefasApp.Models.RegistroEPI>
@{
    ViewData["Title"] = "Registros de EPI";
}
<h2>Registros de Uso de EPI</h2>
<a class="btn btn-primary mb-3" href="/RegistrosEPI/Create">Novo Registro</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Colaborador</th>
            <th>EPI</th>
            <th>Data</th>
            <th>Pontos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Colaborador?.Nome</td>
                <td>@r.EPI</td>
                <td>@r.DataRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@r.Pontos</td>
            </tr>
        }
    </tbody>
</table>
